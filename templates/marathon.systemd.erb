[Unit]
Description=Marathon
After=network.target
Wants=network.target

[Service]
ExecStart=<%= scope.lookupvar('marathon::bin_path') %>/marathon --master <%= @master_url %> --zk <%= @zk_url %> <%= scope.lookupvar('marathon::extra_options') %>
Restart=on-abort
Restart=always
RestartSec=<%= scope.lookupvar('marathon::restart_sec') %>
User=<%= scope.lookupvar('marathon::user') %>

[Install]
WantedBy=multi-user.target
